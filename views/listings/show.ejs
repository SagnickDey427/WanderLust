<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <main>
    <div class="row">
      <div id="card-holder" class="col-lg-6 col-md-8 col-sm-10 offset-md-2 offset-lg-3 offset-sm-1">
        <h3><%=listing.title%></h3>
        <div class="card listing-card">
          <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing image" />
          <div class="card-pody">
            <p class="card-title mt-3">Owned by :<%= listing.owner.username %></p>
            <p class="card-text">
              <p id="lt-desc"><%=listing.description%></p>
              <p>$<%=listing.price.toLocaleString('en-US')%> / night</p>
              <p><i class="fa-solid fa-location-dot"></i> <%=listing.location%></p>
              <p><i class="fa-solid fa-earth-asia"></i> <%=listing.country%></p>
              <span class="category-listing"><i class="fa-solid fa-icons"></i> <%=listing.category%></span>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- <div class="show-btns mb-4">
        <div class="col-1  offset-sm-3 ">
            <a href="/listings/<%=listing._id%>/edit"><button class="btn btn-outline-success">Edit</button></a>
            
        </div>
        <div class="col-1 offset-xs-2">
            <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
                <button class="btn btn-style">Delete</button>
            </form>
        </div>
    </div> -->
    <% if(currUser && currUser._id.equals(listing.owner._id)){%>
      <div class="row mb-4">
          <div class="col-8 offset-3 d-flex align-items-center"> 
              <a href="/listings/<%=listing._id%>/edit" class="me-3"> 
                  <button class="btn btn-outline-success">Edit</button>
              </a>
              
              <form action="/listings/<%=listing._id%>?_method=DELETE" method="post" class="d-inline">
                  <button class="btn btn-style">Delete</button>
              </form>
          </div>
      </div>
    <%}%>
    <div id="review-holder" class="col-8 col-sm-10  offset-md-1 offset-lg-3 mt-3">
      <% if(currUser){ %>
        <hr>
        <h4>Leave a Review</h4>
        <form id="comment-form" action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation">
          <!-- <div class="mt-3 mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" name="review[rating]" class="form-range" id="range4">
            <output for="range4" id="rangeValue" aria-hidden="true"></output>
          </div> -->
          <div class="mt-3 mb-3 add-left-padding">
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-heartbeat">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>
          <div class="mt-3 mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" class="form-control" rows="7" required></textarea>
            <div class="invalid-feedback">Leaving so soon, how about telling us about your experience.</div>
            <div class="valid-feedback">Comment looks good</div>
          </div>
          <button class="btn btn-outline-dark mb-3">Submit</button>
        </form>
      <%}%>
      <% if(listing.reviews.length > 0){%>
        <hr>
        <h4>All Reviews</h4>
        <ul>
          <div class="reviewCards">
            <% for(review of listing.reviews){%>
              <div class="card  ms-3 mb-3">
                <div class="card-body">
                  <h5 class="card-title">@<%=review.createdBy.username%></h5>
                  <p class="starability-result" data-rating="<%=review.rating%>">
    </p>
                  <p class="card-text"><%=review.comment%></p>
                    <% if(currUser && currUser._id.equals(review.createdBy._id)){  %>
                      <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
                        <button class="btn btn-outline-danger">Delete</button>
                      </form>
                    <%}%>
                </div>
              </div>
            <%}%>
          </div>
        </ul>
      <%}%>
      <hr>
    </div>
    <div class=" col-6 col-md-4 offset-xs-2 offset-lg-3" >

      <h4>Where you'll be</h4>
      <div class="col-8 col-xs-4  mb-3">
        <div id="map"></div>
      </div>
    </div>
  </main>
  <script>
    let mapToken = "<%= process.env.MAP_API_KEY %>";
    maptilersdk.config.apiKey = mapToken;

    // 1. Pass the coordinates as a JSON string
    const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;

    const map = new maptilersdk.Map({
      container: "map",
      style: maptilersdk.MapStyle.OUTDOOR,
      center: coordinates, // Use coordinates to center the map on the listing
      zoom: 12,
    });

    //Location print in popup
    const listingLoc = <%-JSON.stringify(listing.location)%>;
    const popup = new maptilersdk.Popup({
      offset:25,
      closeButton:false,
    })
    .setHTML(`<h4>${listingLoc}</h4><p>Exact location provided after booking.</p>`);

    // 2. Add the marker
    const el = document.createElement('div');
    el.className = 'wanderlust-marker';
    el.innerHTML = '<i class="fa-solid fa-house home-icon"></i><i class="fa-regular fa-compass official-logo"></i>'; 
    // Or simply use an emoji: el.innerHTML = 'üè†';

    new maptilersdk.Marker({ element: el })
      .setLngLat(coordinates)
      .setPopup(popup)
      .addTo(map);
  </script>

</body>
